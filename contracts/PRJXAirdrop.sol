contract PRJXAirdrop is Context, Ownable {
    using SafeMath for uint256;
    IERC20 public prjxToken;
    uint256 public totalAirdropped;

    event AirdropInBulk(uint256 totalAccounts, uint256 totalAirdopped);
    function airdropInBulk(
        address[] calldata accounts,
        uint256[] calldata amounts
    ) external onlyOwner {
        require(accounts.length == amounts.length, "Length of accounts and amounts missmatched.");
        uint256 airdropped = totalAirdropped;
        for(uint256 i; i < accounts.length; i++) {
            prjxToken.transfer(accounts[i], amounts[i]);
            totalAirdropped = totalAirdropped.add(amounts[i]);
        }

        airdropped = totalAirdropped.sub(airdropped);
        emit AirdropInBulk(accounts.length, airdropped);
    }

    event AirdropSingle(address indexed account, uint256 amount);
    function airdropSingle(
        address account,
        uint256 amount
    ) external onlyOwner {
        prjxToken.transfer(account, amount);
        totalAirdropped = totalAirdropped.add(amount);
        emit AirdropSingle(account, amount);
    }

    function withdrawToken(
        uint256 amount
    ) external onlyOwner {
        prjxToken.transfer(_msgSender(), amount);
    }

    receive() external payable{
        if(address(this).balance != 0) {
            (bool success, ) = owner().call{value: address(this).balance}("");
            require(success, "Could not transfer ETH.");
        }
    }

    function getTokenBalance() external view returns(uint256){
        return prjxToken.balanceOf(address(this));
    }
    
}